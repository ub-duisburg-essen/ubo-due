<web-fragment version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-fragment_6_0.xsd"
              metadata-complete="true">

  <name>ubo_due</name>

  <servlet id="LSFSearchServlet">
    <servlet-name>LSFSearchServlet</servlet-name>
    <servlet-class>org.mycore.ubo.lsf.LSFSearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LSFSearchServlet</servlet-name>
    <url-pattern>/servlets/LSFSearchServlet</url-pattern>
  </servlet-mapping>

  <servlet id="CascadingLoginServlet">
    <servlet-name>CascadingLoginServlet</servlet-name>
    <servlet-class>org.mycore.ubo.login.CascadingLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CascadingLoginServlet</servlet-name>
    <url-pattern>/servlets/CascadingLoginServlet</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>SessionTimeoutFilter</filter-name>
    <filter-class>org.mycore.ubo.session.SessionTimeoutFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SessionTimeoutFilter</filter-name>
    <url-pattern>/servlets/solr/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter>
    <filter-name>SessionLoginFilter</filter-name>
    <filter-class>org.mycore.ubo.session.SessionLoginFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SessionLoginFilter</filter-name>
    <servlet-name>CascadingLoginServlet</servlet-name>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

</web-fragment>
