<?xml version="1.0" encoding="UTF-8"?>

<webpage id="origin-test">
  <title xml:lang="de">Test der Versionierung der Origin-Klassifikation</title>

  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js" />
    
    <style>
      .chosen-drop { 
        position: absolute;
        width: 1100px !important;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, 0);
      }
    </style>
  </head>

  <article class="card">
    <div class="card-body">
      <xed:form xmlns:xed="http://www.mycore.de/xeditor" method="post" role="form" style="z-index: 99">
        <xed:bind xpath="/test">

          <xed:bind xpath="origin">
            <div class="form-group form-inline">
              <label class="mycore-form-label">
                <a href="api/v1/classifications/ORIGIN">Aktuelle ORIGIN-Klassifikation:</a>
              </label>
              <select id="{xed:generate-id()}" class="autocomplete mycore-form-input custom-select">
                <option value="">
                  <xed:output i18n="search.select" />
                </option>
                <xed:include uri="cache:xslStyle:mycoreclass-options:classification:metadata:-1:children:ORIGIN" />
              </select>
            </div>
          </xed:bind>
          
          <div class="form-group form-inline">
            <label class="mycore-form-label">
              <a href="ORIGIN-Complete.xml">ORIGIN-Complete</a>
              <span>&#160;/&#160;</span> 
              <a href="ORIGIN-Complete.xml?XSL.Style=complete">mit GÃ¼ltigkeitsinfos</a>
            </label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input custom-select">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-complete,mycoreclass-options?numParentLabels=99:resource:META-INF/resources/ORIGIN-Complete.xml" />
            </select>
          </div>

          <div class="form-group form-inline">
            <label class="mycore-form-label">
              <a href="ORIGIN-Complete.xml?XSL.Style=filterForDate">Stand nur des aktuellen Tages:</a>
            </label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input custom-select">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-filterForDate,mycoreclass-options:resource:META-INF/resources/ORIGIN-Complete.xml" />
            </select>
          </div>

          <div class="form-group form-inline">
            <label class="mycore-form-label">
              <a href="ORIGIN-Complete.xml?XSL.Style=filterForDate&amp;XSL.date=2023-07">Stand 2023-07:</a>
            </label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input custom-select">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-filterForDate,mycoreclass-options?date=2023-07:resource:META-INF/resources/ORIGIN-Complete.xml" />
            </select>
          </div>
            
          <div class="form-group form-inline">
            <label class="mycore-form-label">numParentLabels=2</label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input custom-select">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-filterForDate,mycoreclass-options?numParentLabels=2:resource:META-INF/resources/ORIGIN-Complete.xml" />
            </select>
          </div>

          <div class="form-group form-inline">
            <label class="mycore-form-label">numParentLabels=3</label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input custom-select">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-filterForDate,mycoreclass-options?numParentLabels=2:resource:META-INF/resources/ORIGIN-Complete.xml" />
            </select>
          </div>

          <div class="form-group form-inline">
            <label class="mycore-form-label">complete bootstrap-select subtext=true</label>
            <select id="{xed:generate-id()}" class="selectpicker mycore-form-input" data-live-search="true" data-show-subtext="true" data-size="10">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-complete,mycoreclass-options?subtext=true:resource:META-INF/resources/ORIGIN-Complete.xml" />
            </select>
          </div>

        </xed:bind>
      </xed:form>

      <script type="text/javascript">
        $(document).ready(function() { 
          $('select[class*="autocomplete"]').chosen({search_contains: true});
        } );
      </script>

    </div>
  </article>

</webpage>
