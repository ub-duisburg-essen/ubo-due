<?xml version="1.0" encoding="UTF-8"?>

<webpage id="origin-test">
  <title xml:lang="de">Test der Versionierung der Origin-Klassifikation</title>
  
  <article class="card">
    <div class="card-body">
      <xed:form xmlns:xed="http://www.mycore.de/xeditor" method="post" role="form" style="z-index: 99">
        <xed:bind xpath="/test">

          <xed:bind xpath="origin">
            <div class="form-group form-inline">
              <label class="mycore-form-label">
                <a href="api/v1/classifications/ORIGIN">Aktuelle ORIGIN-Klassifikation</a>
              </label>
              <select id="{xed:generate-id()}" class="autocomplete mycore-form-input">
                <option value="">
                  <xed:output i18n="search.select" />
                </option>
                <xed:include uri="xslStyle:mycoreclass-options:classification:metadata:-1:children:ORIGIN" />
              </select>
            </div>
          </xed:bind>
          
          <div class="form-group form-inline">
            <label class="mycore-form-label">
              <a href="ORIGIN-versioned.xml">Alle Versionen</a>
              <span>&#160;/&#160;</span> 
              <a href="ORIGIN-versioned.xml?XSL.Transformer=versionedLabelsAndIDs">im Editor</a>
              <span>&#160;/&#160;</span> 
              <a href="ORIGIN-versioned.xml?XSL.Transformer=versionedLabels">f√ºr Suche:</a>
            </label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-duplicate-versioned-labels,mycoreclass-versioned-labels,mycoreclass-options:resource:META-INF/resources/ORIGIN-versioned.xml" />
            </select>
          </div>

          <div class="form-group form-inline">
            <label class="mycore-form-label">
              <a href="ORIGIN-versioned.xml?XSL.Style=filterForDate">Stand heute (v2401):</a>
            </label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-filterForDate,mycoreclass-options:resource:META-INF/resources/ORIGIN-versioned.xml" />
            </select>
          </div>

          <div class="form-group form-inline">
            <label class="mycore-form-label">
              <a href="ORIGIN-versioned.xml?XSL.Style=filterForDate&amp;XSL.date=2023-12">Stand 2023-12 (legacy v2312):</a>
            </label>
            <select id="{xed:generate-id()}" class="autocomplete mycore-form-input">
              <option value="">
                <xed:output i18n="search.select" />
              </option>
              <xed:include uri="xslStyle:mycoreclass-filterForDate,mycoreclass-options?date=2023-12:resource:META-INF/resources/ORIGIN-versioned.xml" />
            </select>
          </div>

        </xed:bind>
      </xed:form>
    </div>
  </article>

  <script type="text/javascript">
    $(document).ready(function() { $('select[class*="autocomplete"]').selectpicker({liveSearch:true, liveSearchNormalize:true, virtualScroll:true, showSubtext:true, size:10}); });
  </script>
              
</webpage>
